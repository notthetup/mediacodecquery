<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_element"
    android:orientation="horizontal"
    android:padding="5dip" >
    <!-- Codec -->

    <TextView
        android:id="@+id/tvCodecName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingBottom="10dip"
        android:text="@string/codec_name"
        android:textColor="#040404"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tvCodecNameFull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvCodecName"
        android:layout_below="@+id/tvCodecName"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dip"
        android:text="@string/codec_fullname"
        android:textColor="#343434"
        android:textSize="14sp" />

</RelativeLayout>
